<div class="container mb-5 d-flex p-2 justify-content-center">
 <div class="shadow-box border border-white rounded px-5 mt-5">
  <h2 class="text-center mt-3">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>
      <div class="form-actions">
      <div class="border border-white text-center mt-3">
        <%= f.button :submit, "Send me reset password instructions" %>
      </div>
      </div>
    <% end %>
    <br>
    <div class="p-3 text-center">
    <%= render "devise/shared/links" %>
    </div>
    </div>
</div>
