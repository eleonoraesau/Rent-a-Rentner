<h1>My bookings</h1>

<div class="text-center">
  <%= link_to "get back to offers", offers_path, class: "btn btn-primary m-4" %>
</div>
<div class="contrainer">
  <div class="row d-flex justify-content-center">
    <% @my_bookings.each do |my_booking| %>
      <div class="col mb-5">
        <div class="card shadow border mx-auto" style="width: 25rem;">
            <img class="card-img-top p-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?grandma)">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
              <div class="card-body text-center">
                  <div class="card-title">
                    <strong><%= my_booking.offer.name %></strong>
                  </div>
                    <div class="card-text m-3">
                    <small class="text-muted">Comment: </small>
                      <%= my_booking.comment %>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                          Location: <%= my_booking.start_time - my_booking.end_time %>
                        </small>
                    </div>
                </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
