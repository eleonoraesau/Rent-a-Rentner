<div class="contrainer">
  <div>
    <h1 class="text-center p-3"><strong>ðŸŒ¸ My Bookings ðŸŒ¸</strong></h1>
  </div>
  <div class="row d-flex justify-content-center">
    <% @my_bookings.each do |my_booking| %>
      <div class="col mb-5">
        <div class="card shadow-box border border-white p-2 mt-5 mx-auto rounded" style="width: 25rem;">
            <div class="card-background-picture p-2 d-flex justify-content-around rounded" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?grandma)">
                <%= image_tag "https://pbs.twimg.com/media/B94ZbDsIUAAy2gw.jpg", class: "avatar-bordered" %>
                <i class="icon-opacit fa-solid fa-link" style="font-size: 2em"></i>
                <%= image_tag "https://images.unsplash.com/photo-1442458370899-ae20e367c5d8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Z3JhbmRtYXxlbnwwfDB8MHx8&auto=format&fit=crop&w=800&q=60", class: "avatar-bordered" %>
            </div>
              <div class="card-body">
                  <div class="card-title text-center fonti">
                    <strong><h3><%= my_booking.offer.name %></h3></strong>
                  </div>
                    <div class="card-text mt-3">
                    <small class="text-muted">Comment: </small>
                      <%= my_booking.comment %>
                    </div>
                    <br>
                    <div class="card-footer flex-row">
                        <small class="text-muted ">
                        <p><strong>Details:</strong></p>
                          Starttime: <%= my_booking.start_time  %>
                          <br>
                          Endtime: <%= my_booking.end_time %>
                          <br>
                          Address: <%= my_booking.offer.address %>
                        </small>
                     <div class="d-flex justify-content-end">
                         <%= link_to(booking_path(my_booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn-new" ) do %>
                            <i class="fa-solid fa-trash-can"></i>
                          <% end %>
                    </div>
                    </div>
                </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
